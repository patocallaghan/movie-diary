<h3>Brucey Bonus: Ember Truth Helpers</h3>
<h4>Old equals</h4>
{!
  // property defined in .js file and used in template
  propertiesAreEqual: Em.computed.equals('a', 'b')
}
{{#if propertiesAreEqual}}
  a is equal to b
{{/if}}
<hr>

<h4>Ember truth helper equals</h4>
{{#if (eq a b)}}
  a is equal to b
{{/if}}

{{#if (not-eq a b)}}
  a is not equal to b
{{/if}}

{{#if (or a b)}}
  a or b is true
{{/if}}
