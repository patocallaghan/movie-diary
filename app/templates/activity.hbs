  {{#each people as |person index|}}
    <li>{{person.name}} is number {{index}} in the list</li> {{! Pat is number 1 }}
  {{/each}}
</ul>

{{#each people as |person index|}}
  {{person.name}}
{{else}}
  No people in our list!
{{/each}}

<ul>
  {{!
    {
      fanta: ['orange', 'fizzzzzz'],
      budweiser: ['hops', 'shite']
    }
  }}
  {{#each-in drink as |drink ingredients|}}
    <li>
      Drink name: {{drink}}
      Ingredients:
      <ul>
        {{#each ingredients as |ingredient|}}
          {{ingredient}}
        {{/each}}
      </ul>
    </li>
  {{/each-in}}
</ul>

