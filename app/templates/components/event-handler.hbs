<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Click</h3>
  </div>
  <div class="panel-body">
    <div class="alert {{if hasClicked 'alert-danger' 'alert-success'}}" role="alert">
      I clicked {{clickedElement}}
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">KeyDown</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
      {{input type="text" class="form-control" placeholder="Type something" autofocus="autofocus"}}
    </div>
    <div class="alert alert-info" role="alert">
      KeyCode: {{keyCode}}
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">MouseMove</h3>
  </div>
  <div class="panel-body">
    <p>X: {{xPos}}px</p>
    <p>Y: {{yPos}}px</p>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Paste</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
      {{input type="text" class="form-control" placeholder="Type something" autofocus="autofocus"}}
    </div>
    <div class="alert alert-info" role="alert">
      Pasted content: {{pastedContent}}
    </div>
  </div>
</div>

