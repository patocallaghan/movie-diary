<div class="row">
  {{#each sortedMovies as |movie|}}
  <div class="col-sm-6 col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{#link-to 'movies.movie' movie}}{{movie.title}}{{/link-to}}</h3>
      </div>
      <div class="panel-body">
        <p>Rating: {{movie.rating}}</p>
        <p>{{movie.review}}</p>
        <p><b>Date Watched:</b> {{moment-calendar movie.dateWatched}}</p>
      </div>
    </div>
  </div>
  {{else}}
  You've haven't watched any movies yet! Add one {{#link-to 'index'}}here{{/link-to}}
  {{/each}}
</div>
